    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        cardUseCompatPadding="false"
        android:id="@+id/programCard">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/cardThumbnail"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardThumbnail"
                android:maxLines="3"
                android:textSize="24sp"
                android:text="TITLE"
                android:paddingTop="24dp"
                android:paddingBottom="16dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cardDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardTitle"
                android:maxLines="3"
                android:textSize="14dp"
                android:text="Lorem ipsum dolor sit amet, esse novum principes eos id, est ne tota partiendo. Eam omnes qualisque ut, id qui aeque theophrastus, no ipsum dicunt mea."
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardDescription"
                android:layout_alignParentStart="true"
                android:padding="8dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LEARN MORE"
                    android:id="@+id/cardAction1"
                    android:background="@android:color/white"
                    android:theme="@android:style/Theme.Light"
                    android:minWidth="88dp"
                    android:height="36dp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share"
                    android:id="@+id/cardAction2"
                    android:background="@android:color/white"
                    android:theme="@android:style/Theme.Light"
                    android:minWidth="88dp"
                    android:height="36dp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

