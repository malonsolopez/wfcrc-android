<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:id="@+id/programImage"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROGRAM TITLE"
            android:id="@+id/programTitle"
            android:layout_below="@+id/programImage"
            android:layout_alignParentStart="true"
            android:textSize="24sp"
            android:padding="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lorem ipsum dolor sit amet, esse novum principes eos id, est ne tota partiendo. Eam omnes qualisque ut, id qui aeque theophrastus, no ipsum dicunt mea."
            android:id="@+id/programDescription"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/programTitle"
            android:textSize="14sp"
            android:padding="16dp" />

    </RelativeLayout>
</ScrollView>